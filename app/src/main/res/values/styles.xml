<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonHome" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="EditTextTitle">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_12sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="FilledEditText">
        <item name="android:alpha">0.4</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="BottomNavView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
    </style>


    <style name="SplashHeader" parent="Widget.AppCompat.SeekBar">
        <item name="android:textSize">@dimen/font_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashDesc" parent="Widget.AppCompat.SeekBar">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SeparationButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/round_back</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:enabled">true</item>
    </style>
</resources>
