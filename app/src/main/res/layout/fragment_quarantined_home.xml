<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/_30dp">


    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp">

        <TextView
            android:id="@+id/tvStopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@color/white"
            android:padding="@dimen/_5dp"
            android:text="Please submit before stop watch ends."
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tvStopwatchValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStopwatch"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text="00:00:00"
            android:textSize="@dimen/font_20sp" />

        <LinearLayout
            android:id="@+id/llAdd"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tvStopwatchValue"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btPhoto"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:text="Photo Upload"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btIssue"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:text="Add issues"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llAdd"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:padding="@dimen/_5dp"
                android:text="Body Temperature"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etTempValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:hint="In &#xb0;F (Fahrenheit)"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btSubmit"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTemp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_20dp"
            android:text="Submit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlEmergency"
        android:layout_below="@+id/rlMain"
        android:layout_marginTop="@dimen/_30dp"
        android:padding="@dimen/_16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvActive"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/_5dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text="Active\nCases"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvActiveValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="819"
                    android:textSize="@dimen/font_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCured"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text="Cured\nCases"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvCuredValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="79"
                    android:textSize="@dimen/font_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDeath"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text="Death\nCases"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvDeathValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="19"
                    android:textSize="@dimen/font_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEmergency"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16dp">

        <Button
            android:id="@+id/btEmergency"
            style="@style/Button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/red"
            android:text="Emergency"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>