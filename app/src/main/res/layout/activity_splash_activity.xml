<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kashyap.in.yajurvedaproject.splash.SplashActivity">


    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash"/>


    <TextView
        android:id="@+id/tvSplashHeader"
        style="@style/SplashHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="@dimen/_5dp"
        android:text="Quarantine Me" />

    <TextView
        style="@style/SplashDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSplashHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20dp"
        android:padding="@dimen/_5dp"
        android:text="Be a hero just by doing nothing." />
</RelativeLayout>
